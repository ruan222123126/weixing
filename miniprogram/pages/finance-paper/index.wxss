.input {
  border: 1px solid #cbd5e1;
  border-radius: 14rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: #fff;
}

.picker {
  border: 1px solid #cbd5e1;
  border-radius: 14rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: #fff;
}

button {
  margin-bottom: 12rpx;
}

.result-card {
  padding: 16rpx 18rpx;
}

.result-card .sub-title {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.result-row {
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.result-value {
  color: #334155;
  font-size: 24rpx;
}

.result-chip {
  min-width: 44rpx;
  text-align: center;
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.result-chip.success {
  background: #dcfce7;
  color: #166534;
}

.result-chip.fail {
  background: #fee2e2;
  color: #991b1b;
}

.result-error {
  margin-top: 4rpx;
  font-size: 22rpx;
  line-height: 1.4;
}
