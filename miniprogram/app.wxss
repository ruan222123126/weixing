page {
  background: linear-gradient(180deg, #f8fafc 0%, #eef2ff 100%);
  min-height: 100%;
  color: #0f172a;
  font-family: "PingFang SC", "Helvetica Neue", sans-serif;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.sub-title {
  color: #475569;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.btn-primary {
  background: linear-gradient(90deg, #2563eb 0%, #0ea5e9 100%);
  color: #ffffff;
}

.btn-danger {
  background: #ef4444;
  color: #ffffff;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.muted {
  color: #64748b;
}

.badge {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #334155;
}

.badge-success {
  background: #dcfce7;
  color: #166534;
}

.badge-warning {
  background: #fef3c7;
  color: #92400e;
}

.badge-danger {
  background: #fee2e2;
  color: #991b1b;
}
